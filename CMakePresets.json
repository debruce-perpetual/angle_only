{
    "version": 6,
    "cmakeMinimumRequired": { "major": 3, "minor": 24, "patch": 0 },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (Debug, CPU-only)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "AOT_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release (CPU-only)",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "AOT_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "cuda",
            "displayName": "Debug with CUDA",
            "binaryDir": "${sourceDir}/build-cuda",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "AOT_BUILD_TESTS": "ON",
                "AOT_ENABLE_CUDA": "ON"
            }
        },
        {
            "name": "python",
            "displayName": "Python bindings",
            "binaryDir": "${sourceDir}/build-python",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "AOT_BUILD_PYTHON": "ON",
                "AOT_BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        { "name": "default", "configurePreset": "default" },
        { "name": "release", "configurePreset": "release" },
        { "name": "cuda", "configurePreset": "cuda" },
        { "name": "python", "configurePreset": "python" }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": { "outputOnFailure": true }
        }
    ]
}
